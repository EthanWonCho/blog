<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <table>
      <tbody>
        <% posts.forEach(data =>  { %>
          <tr>
            <td>
              <a href="/viewpost?postid=<%=data.n%>">
                <%=data.title%>
              </a>
            </td>
            <td>
              <%=data.body%>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
